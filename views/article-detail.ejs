<script>

function editMode(b){
	var elems = document.getElementsByTagName('div'), i;
    for (i in elems) {
        if((' ' + elems[i].className + ' ').indexOf('editBox')
                > -1) {
            elems[i].contentEditable = b;
        }
    }
}


</script>


